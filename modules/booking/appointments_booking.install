        'type' => 'int',
        'not null' => FALSE,
      ),
    ),
    'primary key' => array('booking_id'),
    'unique keys' => array(
      'submission' => array('webform_nid', 'webform_sid'),
    ),
    'indexes' => array(
      'slot_id' => array('slot_id'),
      'uid' => array('uid'),
      'booking_status' => array('booking_status'),
      'created' => array('created'),
      'changed' => array('changed'),
    ),
  );

  return $schema;
}
