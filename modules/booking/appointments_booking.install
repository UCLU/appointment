    'description' => 'Table storing appointments bookings.',
    'fields' => array(
      'booking_id' => array(
        'description' => 'Primary key: identifier for a booking.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'slot_id' => array(
        'description' => 'The {appointments_slot}.slot_id of the booked slot.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'booking_status' => array(
        'description' => 'The status of the booking (e.g. draft).',
        'type' => 'varchar',
        'length' => 100,
        'not null' => TRUE,
      ),
      'uid' => array(
        'description' => 'The {users}.uid of the appointment\'s owner/creator.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => FALSE,
      ),
      'webform_nid' => array(
        'description' => 'The {node}.nid of the webform used for making this booking.',
